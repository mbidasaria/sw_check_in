<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All flights
    </h1>

    <a href="/flights/new" class="btn btn-block btn-outline-secondary">
      Add a new flight
    </a>
  </div>
</div>

<!-- Ransack Code start -->
<div class="row">
  <div class="col-md-12 mb-3">
    <%= render partial: "flight_templates/flights_search_form" %>
  </div>
</div>
<!-- Ransack Code end -->

<!-- Location Map Code start -->

<!-- Location Map Code end -->

<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Description
        </th>

        <th>
          Departs at
        </th>

        <th>
          User
        </th>

        <th>
          Ten minute message sent
        </th>

        <th>
          Five minute message sent
        </th>

        <th>
          One minute message sent
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @flights.each do |flight| %>
      <tr>
        <!-- Display flight.id start -->
        <td>
          <%= flight.id %>
        </td>
        <!-- Display flight.id end -->

        <!-- Display flight.description start -->
        <td>
          <%= flight.description %>
        </td>
        <!-- Display flight.description end -->

        <!-- Display flight.departs_at start -->
        <td>
          <%= flight.departs_at %>
        </td>
        <!-- Display flight.departs_at end -->

        <!-- Display flight.user_id start -->
        <td>
          <% if flight.user.present? %>
            <a href="/users/<%= flight.user.id %>">
              <%= flight.user.email %>
            </a>
          <% end %>
        </td>
        <!-- Display flight.user_id end -->

        <!-- Display flight.ten_minute_message_sent start -->
        <td>
          <%= flight.ten_minute_message_sent %>
        </td>
        <!-- Display flight.ten_minute_message_sent end -->

        <!-- Display flight.five_minute_message_sent start -->
        <td>
          <%= flight.five_minute_message_sent %>
        </td>
        <!-- Display flight.five_minute_message_sent end -->

        <!-- Display flight.one_minute_message_sent start -->
        <td>
          <%= flight.one_minute_message_sent %>
        </td>
        <!-- Display flight.one_minute_message_sent end -->

        <!-- Display flight.created_at start -->
        <td>
          <%= time_ago_in_words(flight.created_at) %> ago
        </td>
        <!-- Display flight.created_at end -->

        <!-- Display flight.updated_at start -->
        <td>
          <%= time_ago_in_words(flight.updated_at) %> ago
        </td>
        <!-- Display flight.updated_at end -->

        <td>
          <a href="/flights/<%= flight.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @flights, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>
